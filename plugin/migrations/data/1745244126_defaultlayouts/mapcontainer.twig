{% set hideFooter = true %}
{% block Content %}
	<div id="map"></div>
{% endblock %}
{% block Head %}

  <meta name="description" content="Bearbeite mich in Templates > Default Map Container">
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:title" content="{{ config.CMSControl_SiteName }}">
  <meta property="og:description" content="Bearbeite mich in Templates > Default Map Container">
  {#<meta property="og:image" content="https://deine-domain.de/pfad/zum/bild.jpg">#}

{% endblock %}

{% block Scripts %}
	<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
	<script src="{{ includeResource("lp/js/shared/lostplaces.js") }}"></script>
	<script src="https://cdn.jsdelivr.net/npm/leaflet.locatecontrol@0.84.1/dist/L.Control.Locate.min.js"></script>
	<script src="{{ includeResource("lp/libs/Leaflet.awesome-markers/leaflet.awesome-markers.min.js") }}"></script>
	<script src="https://unpkg.com/supercluster@8.0.0/dist/supercluster.min.js"></script>
	<script src="{{ includeResource("lp/js/public/map.js") }}"></script>
{% endblock %}

{% block Stylesheets %}
	<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin=""/>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/leaflet.locatecontrol@0.84.1/dist/L.Control.Locate.min.css">
	<style>
      html, body {
  height: 100%;
  margin: 0;
}
    #map {
      position: absolute;
      top: 56px; /* same as navbar height */
      left: 0;
      right: 0;
      bottom: 0;
      z-index: 0;
    }
    </style>
	<link rel="stylesheet" href="{{ includeResource("lp/libs/Leaflet.awesome-markers/leaflet.awesome-markers.css") }}">
	<link rel="stylesheet" href="{{ includeResource("lp/libs/fontawesome/css/all.min.css") }}">
	<link rel="stylesheet" href="{{ includeResource("lp/css/shared/map.css") }}">
{% endblock %}