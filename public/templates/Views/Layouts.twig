{% extends "Base.twig" %}
{% set pageTitle = "CMSControl.Views.Layouts.Title"| translate %}
{% set currentPage = 'admin/layouts' %}


{% block Content %}
	<div class="row">
		<div class="col-xxl-12 mb-6 order-0 gy-2">
			<div class="card">
				<div class="card-header">
					<h5 class="card-title">{{ "CMSControl.Views.Layouts.Title"| translate }}
						{% if HasWritePermission %}
							<a role="button" href="{{ generateLink("admin/layouts/create") }}" class="btn btn-primary btn-sm float-end">
								<i class="fa-solid fa-plus"></i>
								{{ "CMSControl.Views.Layouts.Card.Button.Create"| translate }}</a>
						{% endif %}
					</h5>

				</div>
				<div class="card-body">
					<table class="table table-sm">
						<thead>
							<tr>
								<th scope="col">#</th>
								<th scope="col">{{ "CMSControl.Views.Layouts.Table.Column.Name"| translate }}</th>
								<th scope="col">{{ "CMSControl.Views.Layouts.Table.Column.Slug"| translate }}</th>
								<th scope="col">{{ "CMSControl.Views.Layouts.Table.Column.Author"| translate }}</th>
								<th scope="col"></th>
							</tr>
						</thead>
						<tbody>
							{% for Layout in Layouts %}
								<tr>
									<th scope="row">{{ Layout.id }}</th>
									<td>{{ Layout.name }}</td>
									<td>{{ Layout.slug }}</td>
									<td>{{ getUserById(Layout.author).getName()|default('???') }}</td>
									<td>
										<a role="button" href="{{ generateLink("admin/layouts/"~ Layout.id) }}" class="btn btn-sm btn-warning">
											<i class="fa-solid fa-pencil"></i>
											{{ "CMSControl.Views.Layouts.Card.Button.Edit"| translate }}</a>
										<button data-action="delete" data-id="{{ Layout.id }}" class="btn btn-sm btn-danger">
											<i class="fa-solid fa-trash"></i>
											{{ "CMSControl.Views.Layouts.Card.Button.Delete"| translate }}</button>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
			{% include "Components/Cards/LayoutInfoCard.twig" %}
		</div>
	</div>
{% endblock %}

{% block PageJs %}
	 <script src="{{ includeResource("js/CMSControl/layouts.js") }}"></script>
{% endblock %}
